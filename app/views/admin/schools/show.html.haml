%h2= "School :: #{@school.name}"

%ul#actions
  %li= link_to '&laquo; All Schools'.html_safe, admin_schools_path
  %li= link_to '# Edit', edit_admin_school_path(@school), :class => 'fancybox'
  %li= link_to 'x Destroy', admin_school_path(@school), :method => :delete, :confirm => "Are you sure you want to delete #{@school.name}? This action cannot be undone!"

%table.striped-right{:style => 'width: 500px;'}
  %tr
    %th Name
    %td= @school.name

%hr

%table.striped
  %tr
    %th Scholar
    %th{:width => 250} Username
    %th{:width => 250} Password
  - @scholars.each do |scholar|
    %tr
      %td= link_to scholar.name, admin_scholar_path(scholar)
      %td= scholar.username
      %td= scholar.password

= paginate(@scholars)