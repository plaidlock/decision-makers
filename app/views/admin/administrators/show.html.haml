%h1= "Administrator :: #{@administrator.name}"

= link_to '[~] Edit', edit_admin_administrator_path(@administrator)
= link_to '[x] Delete', admin_administrator_path(@administrator), :method => :delete, :confirm => "Are you sure you want to delete #{@administrator.name}? This action cannot be undone!"

%table
  %tr
    %th first name:
    %td= @administrator.first_name
  %tr
    %th last name:
    %td= @administrator.last_name
  %tr
    %th username:
    %td= @administrator.username

= link_to 'Show All Administrators', admin_administrators_path