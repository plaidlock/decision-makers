%table.codeable_question
  - unless category.is_a?(Fixnum)
    %tr
      %td{:colspan => questions.size}
        %strong= category
  %tr
  - questions.each do |question|
    %td
      = "<font size=\"3\">#{question.question}</font>".html_safe
      %br
        = text_area_tag "questions[#{question.id}]", current_user.responses.find_by_question_id(question.id).try(:response)